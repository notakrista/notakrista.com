---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">We are a here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800 dark:text-gray-200">
          Contact Astroship
        </h2>
        <p
          class="text-lg leading-relaxed text-slate-500 dark:text-slate-500 mt-3"
        >
          Have something to say? We are here to help. Fill up the form or send
          email or call phone.
        </p>
        <div class="mt-5">
          <div
            class="flex items-center mt-2 space-x-2 text-gray-600 dark:text-gray-400"
          >
            <Icon
              class="text-gray-400 dark:text-gray-600 w-4 h-4"
              name="uil:map-marker"
            />
            <span>Caracas, 1010</span>
          </div><div
            class="flex items-center mt-2 space-x-2 text-gray-600 dark:text-gray-400"
          >
            <Icon
              class="text-gray-400 dark:text-gray-600 w-4 h-4"
              name="uil:envelope"
            /><a href="mailto:info@notakrista.com">info@notakrista.com</a>
          </div><div
            class="flex items-center mt-2 space-x-2 text-gray-600 dark:text-gray-400"
          >
            <Icon
              class="text-gray-400 dark:text-gray-600 w-4 h-4"
              name="uil:phone"
            /><a href="tel:+58 (414) 203 4875">+58 (414) 203 4875</a>
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
